{
	"compilerOptions": {
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"incremental": true,
		"strict": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}